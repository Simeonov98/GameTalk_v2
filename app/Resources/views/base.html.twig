<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}GameTalk{% endblock %}</title>
    {% block stylesheets %}
        {#        <link rel="stylesheet" href="{{ asset('css/style.css') }}">#}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('gamepad.ico') }}"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
</head>
<body background="{{ asset('videoblocks-gray-abstract-low-poly-triangle-background_sygowhrug_thumbnail-full01.png') }}"
      id="{% block body_id %}{% endblock %}">

{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('blog_index') }}">GameTalk</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        {% if app.user.isAdmin() %}

                                <a class="nav-link btn btn-warning" href="{{ path('admin_users') }}">
                                    <font color="#4169e1">Admin Panel</font>
                                </a>


                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('my_articles') }}">My Articles</a>
                        </li>
                        <li>
                            <a class="nav-link" href="{{ path('user_mailbox') }}" >({{ app.user.recipientMessages|length }})
                                Mailbox
                            </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('user_profile') }}"><img src="{{ asset('uploads/images/users/'~ app.getUser().profilePic) }}" width="20px" height="20px"/> Profile</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Genres
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('article_create') }}">Create Article</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_logout') }}">Logout</a>
                        </li>
                    {% else %}

                        <li>
                            <a class="nav-link" href="{{ path('user_register') }}">
                                Register
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="{{ path('security_login') }}">
                                Login
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>
{% endblock %}

<div class="container body-container">
    {% block body %}
        <div class="row">
            <div id="main" class="col-sm-9">
                {% block main %}{% endblock %}
            </div>
        </div>
    {% endblock %}
</div>

{% block footer %}
    <footer>
        <div class="container modal-footer">
            <p><font color="#f0f8ff">&copy; 2019 - Simeon Simeonov</font></p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}

</body>
</html>

