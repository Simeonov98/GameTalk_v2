{% extends 'base.html.twig' %}

{% block main %}
<font color="#C0C0C0">
<br/>
    <div class="container body-content">
    <div class="row">
        {% for article in articles %}
            <div class="col-md-12">
                <article>
                    <img src="{{ asset('uploads/images/articles/' ~ article.image) }}" width="300px" height="150px">
                    <header>
                        <h2>{{ article.title }}</h2>
                    </header>

                    <p>
                        {{ article.content }}
                    </p>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-success btn-xs" href="{{ path('article_edit',{id:article.id}) }}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="{{ path('article_delete',{id:article.id}) }}">Delete &raquo;</a>
                            <a class="btn btn-default btn-xs" href="{{ path('blog_index') }}">Back &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {% endfor %}
    </div>
    </div>
</font>
{% endblock %}

