{% extends 'base.html.twig' %}

{% block main %}
    <font color="#C0C0C0" xmlns="div">
        <div class="container body-content span=8 offset=2">
            <div class="well">
                <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('user_edit_profile') }}"
                      method="post">
                    <fieldset>
                        <legend>Edit</legend>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_email">Email</label>
                            <div class="col-sm-4 ">
                                <input class="form-control" id="user_email" placeholder="Email" name="user[email]"
                                       value="{{ user.email }}" required type="email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_username">Username</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="user_username" placeholder="Username"
                                       name="user[username]" value="{{ user.username }}" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <div id="changePass" class="btn btn-danger btn-sm">Change Password</div>

                            </div><div id="pass"></div>
                        </div>

                        <br/><br/>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_profilePic">Upload Image</label>
                            <div class="col-sm-4 ">
                                <input type="file" accept=".jpg, .jpeg, .png" class="form-control" id="user_profilePic"
                                       placeholder="Upload Image"
                                       name="user[profilePic]">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <a class="btn btn-default" href="{{ path('user_profile') }}">Cancel</a>
                                <button type="submit" class="btn btn-primary">Edit</button>
                            </div>
                        </div>

                        {{ form_row(form._token) }}
                    </fieldset>
                </form>
            </div>
        </div>
        <script>
            $('#changePass').click(function () {
                $('#pass').empty();
                let form =
                    `
                    <br/>
                    <br/>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_password_first">Password</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="user_password_first" placeholder="Password" name="user[password][first]" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_password_second">Confirm Password</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="user_password_second" placeholder="Password" name="user[password][second]" >
                        </div>
                    </div>
                `;
                $('#pass').append(form);
                $('#pass').toggle();
            })
        </script>
    </font>
{% endblock %}

